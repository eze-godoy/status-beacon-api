# Application
APP_NAME="Status Beacon API"
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# Server
HOST=0.0.0.0
PORT=8000

# Database
POSTGRES_USER=statusbeacon
POSTGRES_PASSWORD=statusbeacon
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=statusbeacon

# Database connection pool (optional - sensible defaults)
# DB_POOL_SIZE=5         # Number of connections to keep open
# DB_POOL_OVERFLOW=10    # Max extra connections when pool is exhausted
# DB_POOL_TIMEOUT=30     # Seconds to wait for a connection from pool

# CORS (comma-separated list of origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:7007"]

# Rate limiting (optional - sensible defaults)
# RATE_LIMIT_REQUESTS=100       # Max requests per window
# RATE_LIMIT_WINDOW_SECONDS=60  # Window duration in seconds

# Polling
STATUS_POLL_INTERVAL_SECONDS=60
